<UserControl x:Class="Clickers.Views.ElementViews.EquipmentListing"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Clickers.Views.ElementViews"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Button x:Name="ToWeaponBuyButton" Content="ToWeaponButton" HorizontalAlignment="Left" Width="150" Height="100" Visibility="Collapsed"/>
        <Button x:Name="ToShieldBuyButton" Content="ToShieldButton" HorizontalAlignment="Left" Width="150" Height="100"/>


        <ScrollViewer x:Name="BuyWeaponSV" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Hidden" Width="600">
            <StackPanel x:Name="BuyWeaponSP" Orientation="Horizontal"></StackPanel>
        </ScrollViewer>
        <ScrollViewer x:Name="BuyShieldSV" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Hidden"  Visibility="Collapsed" Width="600">
            <StackPanel x:Name="BuyShieldSP" Orientation="Horizontal"></StackPanel>
        </ScrollViewer>

    </Grid>
</UserControl>
