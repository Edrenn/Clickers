<UserControl x:Class="Clickers.Views.UserControls.ItemUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Clickers.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="White" Width="250">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="0.7*" />
            <RowDefinition Height="0.3*" />
        </Grid.RowDefinitions>
        <Image x:Name="ItemImage" Grid.Row="0" Source="{Binding ImagePath}" />


        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="0.2*" />
            </Grid.RowDefinitions>
            <StackPanel x:Name="ItemInfoSP">
                <TextBlock x:Name="ItemName" HorizontalAlignment="Center" Text="{Binding Name,Mode=TwoWay}" TextWrapping="Wrap"/>
            </StackPanel>
        </Grid>

        <Button x:Name="BuyButton" Grid.Row="3" Content="Acheter" HorizontalAlignment="Center" Click="BuyPotionButton_Click" Width="120" />
    </Grid>
</UserControl>
