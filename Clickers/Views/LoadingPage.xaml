<UserControl x:Class="Clickers.Views.LoadingPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Clickers.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary Source="/Styles/BaseDictionary.xaml"/>
    </UserControl.Resources>
    <Grid Background="Brown">
        <TextBlock x:Name="LoadingTB" FontSize="75" Foreground="White" HorizontalAlignment="Center" Style="{StaticResource TitlePolice}" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
